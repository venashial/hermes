{
  "name": "Hermes",
  "description": "Webhooks and RSS for Modrinth",
  "repository": "https://github.com/venashial/hermes",
  "logo": "https://hermes-webhooks.herokuapp.com/images/logo/icon-512x512.png",
  "keywords": ["node", "express", "webhooks", "rss", "modrinth"],
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev"
    }
  ],
  "env": {
    "USE_DATABASE_SSL": {
      "description": "Connects to database using SSL. Keep this as 'true'",
      "value": "true"
    },
    "DOMAIN": {
      "description": "The domain of the website you will be hosting Hermes on. Like example.com"
    }
  }
}
